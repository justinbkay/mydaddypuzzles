<h2>Edit <%= @customer_story.customer_name %>'s Story</h2>

<% form_for :customer_story, @customer_story, :url => {:action => :update_story, :id => @customer_story} do |story_form| %>
	<%= render :partial => 'story_form', :object => story_form %>
	<%= submit_tag 'Update' %>
<% end %>

<%= link_to "Cancel", :action => "list_stories" %>